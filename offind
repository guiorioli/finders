if [ $# -lt 2 ]; then
	editor=`cat ~/.config/finders/o`
else
	editor=$2
fi

files=`find . -iname "*$1*" | grep -v Binary | grep -v .svn | grep -v .git`
n=1
for f in $files
do
	echo "[$n] $f" | grep "$1" --color=always
	n=$((n+1))
done
echo File to open \(0 to quit\)
printf "> "
read number
n=1
for f in $files
do
	if [ $n -eq $number ]; then
		echo Opening $f
		echo $editor $f \&
		nohup $editor $f &		
		break
	fi
	n=$((n+1))
done

